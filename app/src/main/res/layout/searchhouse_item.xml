<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋名称:"/>


            <TextView
                android:id="@+id/search_housename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述:"/>

            <TextView
                android:id="@+id/search_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxEms="11"
                android:ellipsize="end"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXX"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/search_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="XXX XXX XXX XXXXXXXXXXX"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="房东:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房东姓名"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:text="电话:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/search_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房东电话"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房型：" />

        <TextView
            android:id="@+id/search_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adsfdasf" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价：" />

        <TextView
            android:id="@+id/search_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsadf" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面积：" />

        <TextView
            android:id="@+id/search_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdasdf" />

    </LinearLayout>


    <Button
        android:layout_gravity="right"
        android:id="@+id/search_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送订单"/>


</LinearLayout>