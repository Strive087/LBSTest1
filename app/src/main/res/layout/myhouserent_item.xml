<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋名称:"/>


            <TextView
                android:id="@+id/myrent_list_housename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋描述:"/>

            <TextView
                android:id="@+id/myrent_list_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXXXXXXX"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/myrent_list_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="XXX XXX XXX XXXXXXXXXXX"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/myrent_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租客姓名"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:text="电话:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/myrent_list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租客电话"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:text="价格:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/myrent_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX.XX"/>

    </LinearLayout>


    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/myrent_list_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:text="修改订单"/>

        <Button
            android:id="@+id/myrent_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:text="删除订单"/>

    </LinearLayout>


</LinearLayout>